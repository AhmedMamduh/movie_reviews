<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<%= form_with url: movies_path, method: :get do |f| %>
  <%= f.label :actor, 'Search by Actor:' %>
  <%= f.text_field :actor %>
  <%= f.submit 'Search' %>
<% end %>

<br>

<div id="movies">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Actor</th>
        <th>Location</th>
        <th style="width: 400px;">Description</th>
        <th>Director</th>
        <th>Year</th>
        <th>Country</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.actor %></td>
          <td><%= movie.location %></td>
          <td><%= movie.description %></td>
          <td><%= movie.director %></td>
          <td><%= movie.year %></td>
          <td><%= movie.country %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
